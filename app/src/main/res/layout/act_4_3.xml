<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/padre">
    <RelativeLayout
        android:id="@+id/hijo1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="#ff0000">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/hijo2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/hijo1"
        android:background="#0000ff">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hijo3"
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:layout_below="@id/hijo2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="-128dp"
        android:background="@color/mi_verde"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/hijo4"
        android:layout_width="180dp"
        android:layout_height="280dp"
        android:layout_below="@id/hijo3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="610dp"
        android:layout_marginBottom="-128dp"
        android:background="@color/azul_oscuro"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/hijo5"
        android:layout_width="250dp"
        android:layout_height="280dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="612dp"
        android:layout_marginBottom="-128dp"
        android:layout_toRightOf="@id/hijo4"
        android:background="@color/cuadrado_amarillo"></RelativeLayout>


</RelativeLayout>
